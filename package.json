{
  "name": "melina-lang",
  "displayName": "Melina Lang",
  "description": "Extension for Melina language",
  "version": "0.0.1",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/uncle-alek/Melina.git"
  },
  "contributes": {
    "languages": [{
      "id": "melina",
      "aliases": ["Melina", "melina"],
      "extensions": [".melina"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "melina",
      "scopeName": "source.melina",
      "path": "./syntaxes/melina.tmLanguage.json"
    }],
    "keybindings": [{
          "command": "extension.run",
          "mac": "cmd+r",
          "when": "editorTextFocus",
          "title": "Run test"
      },
      {
        "command": "extension.generate",
        "mac": "cmd+g",
        "when": "editorTextFocus",
        "title": "Generate test"
      },
      {
        "command": "extension.formatCode",
        "mac": "cmd+i",
        "when": "editorTextFocus",
        "title": "Align Code"
    }]
  }
}
